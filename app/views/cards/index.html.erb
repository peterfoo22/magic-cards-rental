<div class="container" style="margin-bottom: 100px;">
	<h3 class="my-5">All cards</h3>

	<div class="cards pb-5">
	  <% @cards.each do |card| %>
	    <%= render 'shared/card', card: card %>
	  <% end %>
	</div>

</div>

<div class="selectorbar">
	<div class="container h-100 d-flex justify-content-end align-items-center">
		<h5 id="text-count" class="mb-0 pr-3">0 cards selected</h5>
		<a href="" class="btn btn-light">Add to cart</a>
	</div>
</div>