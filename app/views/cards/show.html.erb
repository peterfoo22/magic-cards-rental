<div class="container">

  <h3 class="my-5">Card show page</h3>
  <div class="row">
    <div class="col-3 mx-auto">
      <%= render 'shared/card', card: @card %>
    </div>
    <div class="col-3 mx-auto">
      <div class="card-category">
        <div class="card-trip" style="min-height: 500px;">
          <div class="m-3">
            <h3>Bookings</h3>
            <p>
              <% if @bookings %>
              <% @bookings.each do |booking| %>
                <p>Start date: <%= booking.start_date %></p>
                <p>End date: <%= booking.end_date %></p>
                <p>Total price: â‚¬<%= booking.total_price %></p>
                <hr>
              <% end %>
              <% end %>
            </p>
          </div>
        </div>
      </div>
    </div>
    <div class="col-6">
      <%= render 'shared/booking', card: @card %>
    </div>
  </div>

</div>
  <% if @card.reviews.any?  %>
    <%= render 'shared/reviews', card:@card %>
  <% else %>
    <div class="py-5 d-flex justify-content-center flex-column" style = "height:100px; width: 300px">
      Be the first to leave a review for <%= @card.name %>
      <button type="button" class="btn btn-primary btn-md"><%= link_to "Write Review", new_card_review_path(@card), style: "color: white;" %></button>
     </div>
  <% end %>
  <div class="py-5 d-flex justify-content-center">
    <%= link_to "Back", cards_path, :class => "btn btn-flat"%>


