<div class="container">
	<h3 class="my-5">Card show page</h3>

	<div class="row">
		<div class="col-3 mx-auto">
			<%= render 'shared/card', card: @card %>
		</div>
  <div class="card" style="width: 18rem;">
  <ul class="list-group list-group-flush">
    Bookings
    <% @bookings.each do |booking| %>
