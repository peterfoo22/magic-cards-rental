<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto p-3">
      <div class="card p-5" >
        <h1>Edit Price</h1>
          <%= simple_form_for(@card) do |f| %>
          <%= f.input :price_per_week,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "Price per Week" } %>

           <%= f.button :submit, "Update", class: "btn btn-flat" %>
           <%= link_to 'Back', @card, class: "btn btn-flat" %>
          <% end %>
      </div>
    </div>
  </div>
</div>
