<div class="card-trip my-5" >
 <div class="m-3">
   <h3> Book this card </h3>
     <%= simple_form_for [@card, @booking] do |f| %>
     <%= f.error_notification %>
       <div class="form-inputs">
         <%= f.input :start_date,
                     required: true,
                     autofocus: true,
                     value: @start_date,
                     input_html: { autocomplete: "Start date"
                     } %>
         <%= f.input :end_date,
                     required: true,
                     autofocus: true,
                     value: @end_date,
                     input_html: { autocomplete: "End date" } %>
         </div>
         <div class="total_price">
          <!--  <h2> <%#= @total_price %></h2>  --><!-- Use javascript -->
         </div>
         <div class="form-actions">
           <%= f.button :submit, "Book this card", class: "btn btn-flat"%>
         </div>
     <% end %>
     </div>
   </div>
 </div>
</div>
