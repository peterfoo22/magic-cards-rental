<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Confirm your booking</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      	<div class="my-4">
	        <p class="mb-0"><strong>Your deck</strong></p>
	        <div class="dropdown-divider"></div>
	        <div id="name-list"></div>
        </div>
        <div class="my-4">
	        <p class="mb-0"><strong>Booking period</strong></p>
	        <div class="dropdown-divider"></div>
	        <p>
				<% if params["dates"].nil? %>
				<% else %>
				  <%= params["dates"]["range"] %>
				<% end %>
	        </p>

        </div>
		<div class="my-4">
	        <p class="mb-0"><strong>Total price</strong></p>
	        <div class="dropdown-divider"></div>
	        <p id="total-price">â‚¬ 345.00</p>
		</div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-flat-grey" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-flat">Book</button>
      </div>
    </div>
  </div>
</div>
